{% extends 'base.html.twig' %}

{% block title %}Groups{% endblock %}

{% block body %}
    <h1>Groups</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ group.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ group.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ group.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('groups_index') }}">back to list</a>

    <a href="{{ path('groups_edit', {'id': group.id}) }}">edit</a>

    {% if showDeleteButton %}
        {{ include('groups/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
